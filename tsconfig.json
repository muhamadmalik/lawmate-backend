{
  "compilerOptions": {
    "target": "ES2020",                
    "module": "nodenext",              
    "moduleResolution": "nodenext",    
    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,

    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
